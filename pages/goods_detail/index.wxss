.detail_top {
  padding-bottom: 30rpx;
  border-bottom: 15rpx solid #f9f9f9;
  border-radius: 20px;
}
.detail_top .detail_swiper swiper {
  height: 497rpx;
  text-align: center;
}
.detail_top .detail_swiper swiper swiper-item img {
  width: 60%;
}
.detail_top .goods_price {
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}
.detail_top .goods_price .price {
  color: var(--themeColor);
}
.detail_top .goods_price .shareAndCollect {
  display: flex;
  align-items: center;
}
.detail_top .goods_name {
  padding: 10rpx 20rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 30rpx;
}
.goods_info .goods_info_title {
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 15rpx 0;
}
